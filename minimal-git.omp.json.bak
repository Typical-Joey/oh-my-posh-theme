{
  "$schema": "https://ohmyposh.dev/schema.json",
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "powerline_symbol": "",
          "foreground": "#ffffff",
          "properties": {
            "style": "folder",
            "folder_separator_icon": "/",
            "home_icon": "~"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "powerline_symbol": "",
          "foreground": "#00ffff",
          "properties": {
            "display_status": true,
            "display_stash_count": false,
            "display_upstream_icon": false,
            "prefix": " (",
            "postfix": ")",
            "status_symbols": {
              "added": "↑",
              "modified": "~",
              "deleted": "✘"
            },
            "template": "{{ .HEAD }}{{ if or .Working.Changed .Working.Added .Working.Deleted }} |{{ end }}{{ if gt .Working.Added 0 }} ↑{{ .Working.Added }}{{ end }}{{ if gt .Working.Modified 0 }} ~{{ .Working.Modified }}{{ end }}{{ if gt .Working.Deleted 0 }} ✘{{ .Working.Deleted }}{{ end }}"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ffffff",
          "properties": {
            "prefix": "\n",
            "text": "❯"
          }
        }
      ]
    }
  ]
}
