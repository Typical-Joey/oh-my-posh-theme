{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#ffffff",
          "properties": {
            "style": "full"
          },
          "template": " {{ .Path }} "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#00ffff",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": false,
            "fetch_upstream_icon": false
          },
          "template": "{{ .HEAD }}({{ if gt .Working.Added 0 }}↑{{ .Working.Added }} {{ end }}{{ if gt .Working.Modified 0 }}~{{ .Working.Modified }} {{ end }}{{ if gt .Working.Deleted 0 }}✘{{ .Working.Deleted }}{{ end }})"
        },
        {
          "type": "text",
          "style": "plain",
          "properties": {
            "prefix": "\n",
            "text": "❯"
          },
          "foreground": "#ffffff"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
